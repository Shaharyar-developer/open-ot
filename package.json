{
  "name": "open-ot",
  "version": "0.2.6",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@open-ot/eslint-config": "workspace:*",
    "@open-ot/typescript-config": "workspace:*",
    "@types/semver": "^7.7.1",
    "enquirer": "^2.4.1",
    "prettier": "^3.6.2",
    "semver": "^7.7.3",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "bun@1.3.0",
  "engines": {
    "node": ">=20"
  },
  "trustedDependencies": [
    "core-js-pure",
    "esbuild",
    "sharp"
  ]
}
