{
  "extends": "@open-ot/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./*"
      ],
      "@open-ot/ui/*": [
        "../../packages/ui/src/*"
      ],
      "fumadocs-mdx:collections/*": [
        "./.source/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "ES2024",
      "DOM"
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}